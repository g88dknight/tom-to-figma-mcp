{
  "name": "tom-talk-to-figma-mcp",
  "description": "Tom Talk to Figma MCP",
  "version": "0.3.3",
  "module": "dist/server.js",
  "main": "dist/server.js",
  "bin": {
    "tom-talk-to-figma-mcp": "dist/server.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "type": "module",
  "scripts": {
    "start": "./start.sh",
    "start:mcp": "bun run build && bun run dist/server.js --mode=http",
    "start:stdio": "bun run build && bun run dist/server.js",
    "socket": "bun run src/socket.ts",
    "socket:hosted": "./scripts/socket-hosted.sh",
    "setup": "./scripts/setup.sh",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "dev": "bun run build:watch",
    "pub:release": "bun run build && npm publish"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "bun-types": "^1.2.5",
    "tsup": "^8.4.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.13.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "uuid": "latest",
    "ws": "latest",
    "zod": "3.22.4"
  }
}
